# ATENÇÃO: Copie este arquivo para .env, .env.development e/ou .env.test conforme o ambiente desejado.
# Preencha os valores conforme necessário para cada ambiente.
APP_PORT='3000'

# Tipo de banco de dados (postgres, mysql, sqlite, mariaDATABASE, mongoDATABASE, mssql)
TYPEORM_TYPE=postgres

# Configurações de conexão
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_DATABASE=nome_do_banco
DATABASE_USERNAME=usuario
DATABASE_PASS=senha

# Configurações extras
DATABASE_AUTOLOADENTITIES=1
DATABASE_SYNCHRONIZE=1

# JWT Secret
JWT_SECRET=sua-chave-secreta

# Tempo de expiração do token em segundos (padrão 3600 = 1h)
JWT_TTL=3600

# Audience e Issuer do token
JWT_TOKEN_AUDIENCE=sua-audience
JWT_TOKEN_ISSUER=seu-issuer

# Tempo de expiração do refresh token em segundos (padrão 86400 = 1 dia)
JWT_REFRESH_TTL=86400

